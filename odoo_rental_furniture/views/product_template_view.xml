<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Form View -->
    <record id="product_template_rental_custom_form_view" model="ir.ui.view">
        <field name="name">product.template.rental.custom.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position='inside'>
                <span class="d-inline-block">
                    <field name="rent_ok"/>
                    <label for="rent_ok"/>
                </span>
            </xpath>
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <field name="rent_price_on_day" class="oe_inline" widget="monetary" invisible="not rent_ok"/>
            </xpath>

        </field>
    </record>

</odoo>
